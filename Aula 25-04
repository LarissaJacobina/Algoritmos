#include <stdio.h>

void main(){
	float a[5];
        int i;
        printf("Valor da posicao %f:",a[0]);
        scanf("%f", &a[0]);
	for( int i=1; i < 5; i++ ){
            if (i = 1){
            a[i] = a[i-1] + (a[i-1]*10)/100;
            }else if(i = 2){
            a[2] = a[1] + (a[1]*20)/100;
             }else if(i = 3){
            a[3] = a[2] + (a[2]*30)/100;
            }else if(i = 4){
            a[4] = a[3] + (a[3]*40)/100;
            } else if(i = 5){
            a[5] = a[4] + (a[4]*50)/100;
            }else if(i = 6){
            a[i] = a[6-1] + (a[i-1]*50)/100;
            }
        for( int i=0; i<6; i++ ){
            printf("ARR[%d] = %f\n", i, a[i]);
        } 
        }
}
